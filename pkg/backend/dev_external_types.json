{
    "types": [
        {
            "type": "registry",
            "kind": "dockerhub",
            "service-url": "http://local.codefresh.io:10001",
            "uri-template": "registry:dockerhub:{{namespace}}:{{name}}:{{action}}",
            "uri-regex": "^registry:dockerhub:[a-z0-9_-]+:[a-z0-9_-]+:push$",
            "config": [
                {
                    "name": "namespace",
                    "type": "string",
                    "validator": "^[a-z0-9_-]+$",
                    "required": true
                },
                {
                    "name": "name",
                    "type": "string",
                    "validator": "^[a-z0-9_-]+$",
                    "required": true
                },
                {
                    "name": "action",
                    "type": "string",
                    "validator": "^push$",
                    "required": true
                }
            ],
            "filters": [
                {
                    "name": "TAG",
                    "type": "string",
                    "validator": "^.+$"
                }
            ],
            "actions": [
                "push"
            ]
        },
        {
            "type": "cron",
            "kind": "codefresh",
            "service-url": "http://local.codefresh.io:10002",
            "uri-template": "cron:codefresh:{{expression}}:{{message}}",
            "uri-regex": "^Zcron:codefresh:@yearly|@annually|@monthly|@weekly|@daily|@midnight|@hourly|([a-zA-0-9*/,-?]+\\s?){6}:[a-zA-Z0-9_-]{2,64}$",
            "config": [
                {
                    "name": "expression",
                    "type": "cron",
                    "validator": "^@yearly|@annually|@monthly|@weekly|@daily|@midnight|@hourly|([a-zA-Z0-9*/,-?]+\\s?){6}$",
                    "required": true
                },
                {
                    "name": "message",
                    "type": "string",
                    "validator": "^[a-zA-Z0-9_-]{2,64}$",
                    "required": true
                }
            ],
            "filters": [],
            "actions": []
        },
        {
            "type": "git",
            "kind": "github",
            "service-url": "http://local.codefresh.io:10003",
            "uri-template": "git:github:{{owner}}:{{name}}:{{action}}",
            "uri-regex": "^git:github:.+:.+:push$",
            "config": [
                {
                    "name": "owner",
                    "type": "string",
                    "validator": "^.+$",
                    "required": true,
                    "filter": true
                },
                {
                    "name": "name",
                    "type": "string",
                    "validator": "^.+$",
                    "required": true
                },
                {
                    "name": "action",
                    "type": "string",
                    "validator": "^push$",
                    "required": true
                }
            ],
            "filters": [
                {
                    "name": "BRANCH",
                    "type": "string",
                    "validator": "^.+$"
                }
            ],
            "actions": [
                "push"
            ]
        }
    ]
}