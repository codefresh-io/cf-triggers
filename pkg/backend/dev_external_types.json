{
    "types": [
        {
            "type": "registry",
            "kind": "dockerhub",
            "service-url": "http://local.codefresh.io:10001",
            "uri-template": "registry:dockerhub:{{namespace}}:{{name}}:{{action}}",
            "uri-regex": "^registry:dockerhub:[a-z0-9_-]+:[a-z0-9_-]+:push$",
            "config": [
                {
                    "name": "namespace",
                    "type": "string",
                    "validator": "^[a-z0-9_-]+$",
                    "required": true
                },
                {
                    "name": "name",
                    "type": "string",
                    "validator": "^[a-z0-9_-]+$",
                    "required": true
                },
                {
                    "name": "action",
                    "type": "list",
                    "options": {
                        "Push Image": "push"
                    },
                    "validator": "^(push)$",
                    "required": true
                }
            ],
            "filters": [
                {
                    "name": "tag",
                    "type": "string",
                    "validator": "^.+$"
                }
            ]
        },
        {
            "type": "cron",
            "kind": "codefresh",
            "service-url": "http://local.codefresh.io:10002",
            "uri-template": "cron:codefresh:{{expression}}:{{message}}",
            "uri-regex": "^cron:codefresh:@yearly|@annually|@monthly|@weekly|@daily|@midnight|@hourly|([a-zA-Z0-9*/,-?]+\\s?){6}:[a-zA-Z0-9_-]{2,64}$",
            "config": [
                {
                    "name": "expression",
                    "type": "cron",
                    "validator": "^@yearly|@annually|@monthly|@weekly|@daily|@midnight|@hourly|([a-zA-Z0-9*/,-?]+\\s?){6}$",
                    "required": true
                },
                {
                    "name": "message",
                    "type": "string",
                    "validator": "^[a-zA-Z0-9_-]{2,64}$",
                    "required": true
                }
            ],
            "filters": []
        },
        {
            "type": "helm",
            "kind": "codefresh",
            "service-url": "http://local.codefresh.io:9013",
            "uri-template": "helm:codefresh:{{account}}:{{repo}}:{{name}}:{{action}}",
            "uri-regex": "^helm:codefresh:[a-zA-Z0-9_-]{2,64}:[a-zA-Z0-9_-]{2,64}:[a-zA-Z0-9_-]{2,64}:push$",
            "config": [
                {
                    "name": "account",
                    "type": "string",
                    "validator": "^[a-zA-Z0-9_-]{2,64}$",
                    "required": true
                },
                {
                    "name": "repo",
                    "type": "string",
                    "validator": "^[a-zA-Z0-9_-]{2,64}$",
                    "required": true
                },
                {
                    "name": "name",
                    "type": "string",
                    "validator": "^[a-zA-Z0-9_-]{2,64}$",
                    "required": true
                },
                {
                    "name": "action",
                    "type": "list",
                    "options": {
                        "Push Chart": "push"
                    },
                    "validator": "^(push)$",
                    "required": true
                }
            ],
            "filters": [
                {
                    "name": "version",
                    "type": "string",
                    "validator": "^.+$"
                }
            ]
        }
    ]
}
