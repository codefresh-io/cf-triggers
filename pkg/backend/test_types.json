{
    "types": [{
            "type": "registry",
            "kind": "dockerhub",
            "service-url": "http://localhost:8080",
            "uri-template": "registry:dockerhub:{{namespace}}:{{name}}:{{action}}",
            "uri-regex": "^registry:dockerhub:[a-z0-9_-]+:[a-z0-9_-]+:push$",
            "config": [{
                    "name": "namespace",
                    "type": "string",
                    "validator": "^[a-z0-9_-]+$",
                    "required": true
                },
                {
                    "name": "name",
                    "type": "string",
                    "validator": "^[a-z0-9_-]+$",
                    "required": true
                },
                {
                    "name": "action",
                    "type": "list",
                    "options": {
                        "Push Image": "push"
                    },
                    "validator": "^(push)$",
                    "required": true
                }
            ],
            "actions": [
                {
                    "name": "push",
                    "label": "Push Image",
                    "help": "docker push command"
                },
                {
                    "name": "pull",
                    "label": "Pull Image",
                    "help": "docker pull command"
                },
                {
                    "name": "tag",
                    "label": "Tag Image",
                    "help": "docker tag command"
                }
            ],
            "filters": [
                {
                    "name": "tag",
                    "type": "string",
                    "validator": "^.+$"
                },
                {
                    "name": "EVENT_PAYLOAD://repository.status",
                    "type": "string",
                    "validator": "^(Active)$",
                    "actions": ["push"]
                }
            ]
        },
        {
            "type": "registry",
            "kind": "cfcr",
            "service-url": "http://localhost:8080",
            "uri-template": "registry:cfcr:{{namespace}}:{{name}}:{{action}}",
            "uri-regex": "^registry:cfcr:[a-z0-9_-]+:[a-z0-9_-]+:push$",
            "config": [{
                    "name": "namespace",
                    "type": "string",
                    "validator": "^[a-z0-9_-]+$",
                    "required": true
                },
                {
                    "name": "name",
                    "type": "string",
                    "validator": "^[a-z0-9_-]+$",
                    "required": true
                },
                {
                    "name": "action",
                    "type": "string",
                    "validator": "^push$",
                    "required": true
                }
            ],
            "filters": [
                {
                    "name": "tag",
                    "type": "string",
                    "validator": "^.+$"
                }
            ]
        }
    ]
}